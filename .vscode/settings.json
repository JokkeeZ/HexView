{
	"files.associations": {
		"cmath": "c",
		"xlocale": "c",
		"initializer_list": "c",
		"type_traits": "c",
		"xstring": "c",
		"xutility": "c"
	},

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/.gitignore": true,
		"**/.gitattributes": true,
		"**/*.exe": true,
		"**/*.ilk": true,
		"**/*.obj": true,
		"**/*.pdb": true
	},
	
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modifications",
	"C_Cpp.formatting": "vcFormat",
	"C_Cpp.vcFormat.space.pointerReferenceAlignment": "right",
	"C_Cpp.vcFormat.newLine.beforeElse": false
}
